int bit; 
int num = 0; 
while(true) { 
  scanf("%d",&bit); 
  if(bit==0) { 
    num=num*2; 
  } 
  if(bit==1) { 
    num=num*2+1; 
  } 
  if(bit != 0 && bit != 1) { 
    printf("%s","invalid input."); 
  } 
  if(num % 3 == 0) { 
    num = 0; 
    printf("%s","is divisible by 3"); 
  } 
  else { 
    num=num%3; 
    printf("%s","not divisible by 3"); 
  } 
}
